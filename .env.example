# CAG System Environment Configuration

# =============================================================================
# CORE API CONFIGURATION
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Optional: For production deployments with authentication
# REDIS_PASSWORD=your_redis_password
# REDIS_SSL=true

# =============================================================================
# GPTCACHE CONFIGURATION
# =============================================================================
GPTCACHE_DATA_DIR=gptcache_data
GPTCACHE_LLM_PREFIX=gptcache_llm
GPTCACHE_CRAWL_PREFIX=gptcache_crawl

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=CAG System
APP_VERSION=1.0.0
DEBUG=false

# =============================================================================
# REDIS SERVER INTEGRATION (Optional)
# =============================================================================
REDIS_SERVER_ENABLED=false
REDIS_SERVER_URL=http://localhost:8001

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Uncomment for development
# DEBUG=true
# LOG_LEVEL=debug